#version 330
out vec4 fragColor; 

	in vec2 vTexCoord;
	uniform sampler2D uSampler;
	void PreFragment() {}
	void PostFragment()
	{
		fragColor.rgb *= texture2D(uSampler, vTexCoord.xy).rgb;
	}
 
void main() 
{
	PreFragment();
 
	fragColor = vec4(1.0);
	
	PostFragment();
	
	const vec3 gamma = vec3(1.0 / 2.2);
	fragColor.rgb = pow( fragColor.rgb, gamma); 
}
